<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
        <!-- Kanban View -->
        <record id="view_openbiblica_bible_kanban" model="ir.ui.view">
            <field name="name">openbiblica.kanban</field>
            <field name="model">openbiblica.bible</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban" string="Bibles">
                    <field name="name"/>
                    <field name="description"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_content oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('openbiblica.bible', 'photo', record.id.raw_value)"/>
                                </div>                                
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <li><field name="name"/></li>
                                        <li><field name="description"/></li>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
            
        <record id="view_openbiblica_verse_tree" model="ir.ui.view">
            <field name="name">openbiblica.verse.tree</field>
            <field name="model">openbiblica.verse</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Verse">
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="content"/>
                    <field name="chapter_id"/>
                    <field name="book_id"/>
                    <field name="bible_id"/>
                    <field name="source_id"/>
                    <field name="source_ids"/>
                </tree>
            </field>
        </record>

        <record id="view_openbiblica_verse_form" model="ir.ui.view">
            <field name="name">openbiblica.verse.form</field>
            <field name="model">openbiblica.verse</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Verse">
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="sequence"/>
                            <field name="name" required="1"/>
                            <field name="content"/>
                            <field name="chapter_id"/>
                            <field name="book_id"/>
                            <field name="bible_id"/>
                            <field name="source_id"/>
                            <field name="source_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_openbiblica_verse_search" model="ir.ui.view">
            <field name="name">openbiblica.verse.search</field>
            <field name="model">openbiblica.verse</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Verse">
                    <field name="name"/>
                    <field name="content"/>
                    <field name="chapter_id"/>
                    <field name="book_id"/>
                    <field name="bible_id"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Chapter" name="group_by_chapter_id"
                                domain="[]" context="{'group_by':'chapter_id'}"/>
                        <filter string="Book" name="group_by_book_id"
                                domain="[]" context="{'group_by':'book_id'}"/>
                        <filter string="Bible" name="group_by_bible_id"
                                domain="[]" context="{'group_by':'bible_id'}"/>
                    </group>
                </search>
            </field>
        </record>

